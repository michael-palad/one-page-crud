<%= simple_form_for @person, remote: true do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :country, prompt: "Select Country" %>
  
  <% if @person.persisted? %>
    <%= f.submit "Update", class: "btn btn-success",
        data: { disable_with: "Updating..." } %>
  <% else %>
    <%= f.submit " Add ", class: "btn btn-success",
        data: { disable_with: "Adding..." } %>
  <% end %>
<% end %>